<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wbe.j2ee.dao.OrderDao">

    <insert id="add" parameterType="Order">
        insert into `order` (orderid,userid,restaurantuuid,name,number,cost,subtotal) values (#{orderid},#{userid},#{restaurantuuid},#{name},#{number},#{cost},#{subtotal})
    </insert>

    <select id="max" resultType="Integer">
        select max(orderid) from `order`
    </select>

    <select id="selectById" parameterType="int" resultType="Order">
        select * from `order` where orderid=#{orderid}
    </select>

    <update id="confirm" parameterType="Order">
        update `order` set status=2 where orderid=#{orderid}
    </update>
</mapper>
    
    